<div class="container"><p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class = 'table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Category</th>
      <th>User rating</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td><% rating = restaurant.reviews.average(:rating).to_i%>
            <% rating.round(0).times do %>
          <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to restaurant do %>
          <i class="fa fa-eye" aria-hidden="true"></i>
        <% end %></td>
        <td><%= link_to edit_restaurant_path(restaurant) do %>
          <i class="fa fa-pencil" aria-hidden="true"></i>
        <% end %></td>
        <td><%= link_to restaurant, method: :delete, data: { confirm: 'Are you sure?' }  do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
